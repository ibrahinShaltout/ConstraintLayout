<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/medium_margin"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".27" />

    <TextView
        android:id="@+id/tv_ios_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/xx_small_margin"
        android:text="IOS Developer"
        android:textColor="@android:color/black"
        android:textSize="@dimen/larg_text_size"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tx_company_name_item"
        style="@style/text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Gulf Tech"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/colorgray"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
        app:layout_constraintTop_toBottomOf="@+id/tv_ios_developer" />


    <TextView
      android:id="@+id/tx_city_name_item"
      style="@style/text_view_style"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Munahat, Kuwait sharq"
      android:textColor="@color/colorgray"
      android:textSize="@dimen/small_text_size"
      app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
        app:layout_constraintTop_toBottomOf="@+id/tx_company_name_item" />

    <TextView
        android:id="@+id/tx_date_item"
        style="@style/text_view_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13/11/2019"
        android:layout_marginTop="@dimen/small_margin"
        android:textColor="@color/colorgray"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageView"
        app:layout_constraintTop_toBottomOf="@+id/tx_city_name_item" />

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/xx_small_margin"
        app:layout_constraintTop_toBottomOf="@+id/tx_date_item"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/xx_small_margin"
        android:layout_marginTop="@dimen/xx_small_margin"
        android:background="@drawable/ic_favorite_black24dp"
        app:layout_constraintEnd_toStartOf="@+id/Button_share"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/Button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/xx_small_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        android:background="@drawable/ic_share_black24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>