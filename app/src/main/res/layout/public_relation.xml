<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorwhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/tv_public_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="public relation specialist"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_kuwait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Kuwait"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/tv_public_relation"
        app:layout_constraintTop_toBottomOf="@+id/tv_public_relation"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Posted 61 day ago"
        android:textColor="@android:color/darker_gray"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/tv_public_relation"
        app:layout_constraintTop_toBottomOf="@+id/tv_kuwait"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/etisalat_logo"
        android:layout_width="100dp"
        android:layout_height="135dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/etisalat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ic_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_favorite_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_public_relation"
        app:layout_constraintTop_toBottomOf="@+id/etisalat_logo" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/appCompatImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_share_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/ic_favorite"
        app:layout_constraintTop_toTopOf="@+id/ic_favorite" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/my_button_bg"
        android:text="Apply"
        android:textAllCaps="false"
        android:textColor="@color/colorRed"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/appCompatImageButton"
        app:layout_constraintTop_toTopOf="@+id/ic_favorite"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton2"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/my_button_follow"
        android:text="Follow"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        app:layout_constraintEnd_toEndOf="@id/etisalat_logo"
        app:layout_constraintTop_toBottomOf="@+id/icludeone"
        app:layout_constraintTop_toTopOf="@+id/ic_favorite"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>